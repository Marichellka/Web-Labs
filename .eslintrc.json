{
  "env": {
    "browser": true,
    "es2021": true
  },
  "root": true,
  "plugins": ["sonarjs"],
  "extends": ["metarhia", "plugin:sonarjs/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "sonarjs/cognitive-complexity": ["error", 15],
    "indent": ["error", "tab"],
    "no-return-await": 0
  }
}